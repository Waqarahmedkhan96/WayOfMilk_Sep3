@page "/sales/edit/{Id:long}"
@rendermode InteractiveServer

@using ApiContracts
@using WoM_BlazorApp.Services.Interfaces
@inject ISaleService SaleService
@inject NavigationManager Nav

<h3>Edit Sale</h3>

@if (model == null)
{
    <p>Loading...</p>
}
else
{
    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger">@error</div>
    }

    <EditForm Model="model" OnValidSubmit="HandleSubmit">
        <DataAnnotationsValidator />

        <div class="mb-3">
            <label class="form-label">Date</label>
            <InputDate @bind-Value="model.DateTime" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Customer ID</label>
            <InputNumber @bind-Value="model.CustomerId" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Container ID</label>
            <InputNumber @bind-Value="model.ContainerId" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Quantity (L)</label>
            <InputNumber @bind-Value="model.QuantityL" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Price</label>
            <InputNumber @bind-Value="model.Price" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <InputCheckbox @bind-Value="model.RecallCase" class="form-check-input" id="recallCaseEdit" />
            <label class="form-check-label" for="recallCaseEdit">Recall case</label>
        </div>

        <p class="text-muted">
            Created by user: @model.CreatedByUserId
        </p>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Save changes</button>
            <button type="button" class="btn btn-secondary" @onclick="@(() => Nav.NavigateTo("/sales"))">Cancel</button>
        </div>
    </EditForm>
}

@code {
    [Parameter] public long Id { get; set; }

    private SaleDto? model;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            model = await SaleService.GetByIdAsync(Id);
        }
        catch
        {
            error = "Sale not found.";
        }
    }

    private async Task HandleSubmit()
    {
        if (model == null) return;

        try
        {
            var dto = new UpdateSaleDto
            {
                Id = model.Id,
                CustomerId = model.CustomerId,
                ContainerId = model.ContainerId,
                QuantityL = model.QuantityL,
                Price = model.Price,
                DateTime = model.DateTime,
                RecallCase = model.RecallCase
            };

            await SaleService.UpdateAsync(Id, dto);
            Nav.NavigateTo("/sales");
        }
        catch (Exception ex)
        {
            error = ex.Message;
        }
    }
}
