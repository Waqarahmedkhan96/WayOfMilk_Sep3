@page "/users"
@rendermode InteractiveServer

@using Microsoft.AspNetCore.Authorization
@using System.Security.Claims
@using ApiContracts
@using Microsoft.AspNetCore.Components.Authorization
@using WoM_BlazorApp.Services.Interfaces

@inject IUserService UserService
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager Nav
@inject IAuthService AuthService
@inject IJSRuntime JS
@* to allow 'are you sure' dialog *@

@attribute [Authorize]

<PageTitle>Users</PageTitle>

@if (isLoading)
{
    <div class="spinner-border text-primary"></div>
}
else if (isOwner)
{
    @* --- OWNER VIEW: THE LIST --- *@
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Manage Users</h1>
        <button class="btn btn-primary" @onclick="@(() => Nav.NavigateTo("/users/create"))">
            + Add User
        </button>
    </div>

    @if (!string.IsNullOrEmpty(message))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @message
            <button type="button" class="btn-close" @onclick="() => message = null"></button>
        </div>
    }
    @if (!string.IsNullOrEmpty(error))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @error
            <button type="button" class="btn-close" @onclick="() => error = null"></button>
        </div>
    }

    @if (users == null)
    {
        <p>No users found.</p>
    }
    else
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in users)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Email</td>
                        <td>
                            <span class="badge @GetRoleBadgeClass(user.Role.ToString())">@user.Role</span>
                        </td>
                        <td>
                            @* Action Buttons *@
                            <button class="btn btn-sm btn-outline-primary me-1"
                                    @onclick="@(() => Nav.NavigateTo($"/users/edit/{user.Id}"))">
                                Edit
                            </button>

                            <button class="btn btn-sm btn-outline-warning me-1"
                                    @onclick="@(() => ConfirmReset(user))">
                                Reset Pwd
                            </button>

                            <button class="btn btn-sm btn-outline-danger"
                                    @onclick="@(() => DeleteUser(user.Id))">
                                Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
else
{
    @* --- WORKER/VET VIEW: THEIR PROFILE --- *@
    @* We use the Profile Component here *@
    <UserProfile UserDto="@currentUser" />
}

@code {
    private bool isOwner = false;
    private bool isLoading = true;
    private IEnumerable<UserDto>? users;
    private UserDto? currentUser;
    private string? message;
    private string? error;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            var user = authState.User;

            // Check Role
            var roleClaim = user.FindFirst(ClaimTypes.Role);
            isOwner = roleClaim != null && roleClaim.Value == "Owner";

            if (isOwner)
            {
                // Owner? Load Everyone
                users = await UserService.GetAllAsync();
            }
            else
            {
                // Not Owner? Load Self
                currentUser = await UserService.GetCurrentUserAsync();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading users: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task ConfirmReset(UserDto user)
    {
        // 1. Show JavaScript Confirmation Dialog
        bool confirmed = await JS.InvokeAsync<bool>("confirm",
            $"Are you sure you want to reset the password for {user.Name} to '0000'?");

        if (confirmed)
        {
            try
            {
                // Since the server handles the '0000' logic, we just send the ID.
                //could've been a simple long, but I don't have the time to refactor rn
                // We send empty string for password if the DTO requires it, or handle it in backend.
                await AuthService.ResetPasswordAsync(new ResetPasswordDto
                {
                    UserId = user.Id
                });

                message = $"Password for {user.Name} reset successfully.";
                error = null;
            }
            catch (Exception ex)
            {
                error = $"Failed to reset password: {ex.Message}";
                message = null;
            }
        }
    }

    private async Task DeleteUser(long id)
    {
        bool confirmed = await JS.InvokeAsync<bool>("confirm", "Are you sure you want to delete this user?");
        if (!confirmed) return;

        await UserService.DeleteAsync(id);
        users = await UserService.GetAllAsync();
        message = "User deleted.";
    }

    private string GetRoleBadgeClass(string? role) => role switch
    {
        "Owner" => "bg-danger",
        "Vet" => "bg-info",
        _ => "bg-secondary"
    };
}